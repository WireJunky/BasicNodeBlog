{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": false,
        "sourceMap": true,  
        "lib": ["dom","es5", "es6","es2015.promise"],
        "outDir" : "../dist",
        "watch": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            "node",
            "reflect-metadata"
         ],
        "typeRoots": [
            "node_modules/@types"
         ]
    },
     "exclude": [
         "server",
         "client.webpack.config.js",
         "node_modules"
     ]
}