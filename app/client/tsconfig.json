{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "sourceMap": true,  
        "lib": ["dom","es5", "es6","es2015.promise"],
        "outDir" : "../dist",
        "watch": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "../",
        "types": [
            "node",
            "reflect-metadata"
         ],
        "typeRoots": [
            "@types"
         ]
    },
    "include": [
         "../client/**/*",
         "../common/**/*"
      ]           
}