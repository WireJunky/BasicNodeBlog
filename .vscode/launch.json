{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\app\\server\\Bootstrap.ts",
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}\\dist\\server\\**"],
            "skipFiles": [ "${workspaceRoot}/node_modules/**/*.js"],
            "sourceMaps": true,
            "stopOnEntry": false,
            "smartStep": true,
            "args": [],
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "express:*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "program": "${workspaceRoot}\\node_modules\\jest\\bin\\jest.js",
            "smartStep":true,
            "args": [
                "--config",
                "${workspaceRoot}\\jest.json",
                "--runInBand"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/server/**/*"
            ]
        },        
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}