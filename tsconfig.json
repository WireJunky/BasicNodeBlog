{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,       
        "sourceMap": true,
        //"inlineSourceMap": true,
        //"inlineSources": true,
        "lib": ["es5", "es6","es2015.promise","esnext","dom"],
        "outDir" : "./Dist",
        "watch": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "Src/",
        "types": [
            //"node",
            "reflect-metadata",
            "jest"
         ],
        "typeRoots": [
            "@types"
         ]
    },
      "include": [
         "Src/**/*"
      ],        
     "exclude": [
         "node_modules",
         "node_modules/@types/winston/node_modules/*",
         "**/RouteTemplate.ts"
     ]  
}